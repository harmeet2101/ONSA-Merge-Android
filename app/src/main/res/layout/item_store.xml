<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <EditText
                android:id="@+id/et_number"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/et_background"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_32sdp"
                android:padding="@dimen/_4sdp"
                android:text="5"
                android:textColor="@color/txt_color_dark"
                android:textColorHint="@color/txt_color_light_grey"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_toStartOf="@id/et_number"
                android:layout_toLeftOf="@id/et_number"
                android:background="@color/white">


                <ImageView
                    android:id="@+id/img_dropdown"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_chevron_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/img_dropdown"
                    android:layout_toLeftOf="@id/img_dropdown"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color_dark"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/txt_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:textColor="@color/txt_color_dark"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>