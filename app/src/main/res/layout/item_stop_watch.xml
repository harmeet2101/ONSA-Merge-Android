<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="@string/reset"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/btn_start"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:text="@string/start"
                android:background="@color/depotnet_color"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/btn_reset"
                android:layout_toEndOf="@id/btn_reset"
                android:layout_toStartOf="@id/btn_start"
                android:layout_toLeftOf="@id/btn_start"
                android:gravity="center"
                android:text="00:00:00"
                android:padding="@dimen/_12sdp"
                android:textAlignment="center"
                android:textColor="@color/txt_color_dark"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>