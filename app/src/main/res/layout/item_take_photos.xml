<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_96sdp"
            android:layout_toEndOf="@id/img_photo"
            android:layout_toRightOf="@id/img_photo">

        <TextView
            android:id="@+id/txt_photo_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_96sdp"
            android:padding="@dimen/_4sdp"
            android:gravity="top"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/txt_color_dark"
            android:textColorHint="@color/txt_color_light_grey"
            android:visibility="gone"
            android:text="@string/comment"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/btn_add_comment"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/et_background_green"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/add_comment"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_96sdp"
            android:layout_margin="@dimen/_2sdp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/btn_backgorund" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_photo"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_toEndOf="@id/img_photo"
            android:layout_toRightOf="@id/img_photo"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_txt_edit"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background_green"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp"
                android:text="@string/edit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_txt_delete"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:background="@drawable/et_background_red"
                android:gravity="center_horizontal"
                android:padding="@dimen/_4sdp"
                android:text="@string/delete"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>