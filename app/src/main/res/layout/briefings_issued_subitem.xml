<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="@dimen/_2sdp">

    <TextView
        android:id="@+id/BIsubitem_operative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:drawableStart="@drawable/ic_user_new"
        android:drawableLeft="@drawable/ic_user_new"
        android:drawablePadding="@dimen/_16sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/BIdivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="operative" />

    <View
        android:id="@+id/BIdivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="@dimen/_8sdp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BIsubitem_operative" />
</androidx.constraintlayout.widget.ConstraintLayout>