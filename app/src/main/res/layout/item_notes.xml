<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        app:srcCompat="@drawable/ic_user"/>

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/img_user"
        android:layout_toRightOf="@id/img_user"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:text="Depotnet User"
        android:textColor="@color/txt_color_dark"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/img_date"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_below="@id/img_user"
        android:layout_marginTop="@dimen/_4sdp"
        app:srcCompat="@drawable/ic_date_range" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_user"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/img_date"
        android:layout_toRightOf="@id/img_date"
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:text="24/11/2009"
        android:textColor="@color/txt_color_dark"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_below="@id/img_date"
        android:layout_marginTop="@dimen/_4sdp"
        app:srcCompat="@drawable/ic_flag" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/img_type"
        android:layout_toRightOf="@id/img_type"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:text="Internal"
        android:textColor="@color/txt_color_dark"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/img_desc"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_below="@id/img_type"
        android:layout_marginTop="@dimen/_4sdp"
        app:srcCompat="@drawable/ic_message" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_type"
        android:layout_toEndOf="@id/img_desc"
        android:layout_toRightOf="@id/img_desc"
        android:paddingStart="@dimen/_4sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:textStyle="bold"
        android:textColor="@color/txt_color_dark"
        android:textSize="@dimen/_12sdp" />







</RelativeLayout>
