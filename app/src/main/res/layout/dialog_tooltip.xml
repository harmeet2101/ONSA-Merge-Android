<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/imgBtnInfo"
        android:background="@drawable/ic_info"
        android:backgroundTint="?attr/selected_background_color"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_centerHorizontal="true"
        tools:targetApi="lollipop" />
    <TextView
        android:id="@+id/vkdvkk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"
        android:layout_below="@+id/imgBtnInfo"
        android:text="@string/tooltip"/>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/vkdvkk"
        tools:text="If not, has it been updated" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/btn_backgorund"
        android:backgroundTint="?attr/selected_background_color"
        android:text="@string/done"
        android:textStyle="bold"
        android:layout_below="@+id/txt_message"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        tools:targetApi="lollipop" />

</RelativeLayout>