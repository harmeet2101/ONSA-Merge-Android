<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/ColorBriefing">

        <TextView
            android:id="@+id/txt_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_horizontal"
            android:text="Briefings"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_72sdp"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_16sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingTop="@dimen/_48sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_briefings_header"
                    android:layout_marginLeft="@dimen/_8sdp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_read_issue"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/ColorAlerts"
                    android:text="Read/ Issue New Briefing"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_14sdp"
                    app:cornerRadius="@dimen/_8sdp"
                    app:icon="@drawable/ic_briefings"
                    app:iconTint="@color/bg_white"
                    app:iconSize="@dimen/_24sdp"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_briefing_given"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/red"
                    android:text=" Briefings Given"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_16sdp"
                    app:cornerRadius="@dimen/_8sdp"
                    tools:targetApi="lollipop" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_briefing_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/red"
                    android:text="Briefings Received"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_16sdp"
                    app:cornerRadius="@dimen/_8sdp"
                    tools:targetApi="lollipop" />


            </LinearLayout>
        </ScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_48sdp"
        app:srcCompat="@drawable/ic_briefing_logo"
        android:padding="@dimen/_8sdp" />
</FrameLayout>
