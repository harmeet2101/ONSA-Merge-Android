<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/txt_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color_light_grey"
            android:textSize="@dimen/_10sdp"
            android:text="@string/job_id"/>

        <TextView
            android:id="@+id/txt_job_id"
            android:layout_toRightOf="@id/txt_job_title"
            android:layout_toEndOf="@id/txt_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_color_light_grey"
            android:textSize="@dimen/_10sdp"
            android:text="45678"/>

        <TextView
            android:id="@+id/txt_submission_type"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_below="@id/txt_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/depotnet_color"
            android:textSize="@dimen/_10sdp"
            android:text="Backfill"/>

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_chevron_right"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>