<resources>

    <!-- Base application theme. -->

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <!--  It extends AppCompat theme, but add all necessary stuff....
         old one    Theme.AppCompat.Light.NoActionBar-->
    </style>
    <style name="AppTheme" parent="Theme.MyApp">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="selected_background_color">@color/depotnet_color</item>
        <item name="selected_txt_color">@color/depotnet_color</item>
        <item name="unselected_background_color">@color/white</item>
        <item name="unselected_txt_color">@color/txt_color_light_grey</item>
    </style>
    <style name="AppTheme.Hseq" parent="Theme.MyApp">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorHseqLight</item>
        <item name="selected_background_color">@color/ColorHseq</item>
        <item name="selected_txt_color">@color/ColorHseqLight</item>
        <item name="unselected_background_color">@color/white</item>
        <item name="unselected_txt_color">@color/txt_color_light_grey</item>
    </style>
    <style name="AppTheme.Briefings" parent="Theme.MyApp">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorBriefing</item>
        <item name="selected_background_color">@color/ColorBriefing</item>
        <item name="selected_txt_color">@color/ColorBriefing</item>
        <item name="unselected_background_color">@color/white</item>
        <item name="unselected_txt_color">@color/txt_color_light_grey</item>
    </style>
    <style name="AppTheme.Actions" parent="Theme.MyApp">
        <item name="colorPrimary">@color/ColorActions</item>
        <item name="colorPrimaryDark">@color/ColorActions</item>
        <item name="colorAccent">@color/ColorActions</item>
        <item name="selected_background_color">@color/ColorActions</item>
        <item name="selected_txt_color">@color/ColorActions</item>
        <item name="unselected_background_color">@color/white</item>
        <item name="unselected_txt_color">@color/txt_color_light_grey</item>
    </style>
    <style name="AppTheme.Timesheet" parent="Theme.MyApp">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorTimeSheet</item>
        <item name="selected_background_color">@color/ColorTimeSheet</item>
        <item name="selected_txt_color">@color/ColorTimeSheet</item>
        <item name="unselected_background_color">@color/white</item>
        <item name="unselected_txt_color">@color/txt_color_light_grey</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/white</item>
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog" />

    <style name="DialogBorderlessButton">
        <item name="android:minWidth">64dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/_24sdp</item>
        <item name="android:paddingRight">@dimen/_24sdp</item>
        <item name="android:layout_marginLeft">@dimen/_24sdp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search</item>
    </style>

    <style name="calender_header_styles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="calender_week_styles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MyWeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextAppearance.MyHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/txt_color_light_grey</item>
    </style>


</resources>
